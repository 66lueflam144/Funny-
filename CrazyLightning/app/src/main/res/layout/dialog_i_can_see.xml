<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SHOW YOU REAL ME 0x80064\nYSM\n202221091226"
            android:textStyle="italic" />


        <Button
            android:id="@+id/btn_normal_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="普通对话框"
            android:textSize="18sp"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btn_single_choice_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="单选对话框"
            android:textSize="18sp"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btn_multi_choice_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="多选对话框"
            android:textSize="18sp"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btn_semi_custom_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="半自定义对话框"
            android:textSize="18sp"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btn_custom_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="自定义对话框"
            android:textSize="18sp"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btn_circular_progress_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="圆形进度条对话框"
            android:textSize="18sp"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btn_horizontal_progress_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="水平进度条对话框"
            android:textSize="18sp"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btn_bottom_sheet_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bottom Sheet Dialog"
            android:textSize="18sp"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />


    </LinearLayout>


</ScrollView>
