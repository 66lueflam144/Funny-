<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/off_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="30dp"
        android:padding="50dp"
        android:text="OFF-LINE"
        android:textStyle="bold"
        android:background="#F8F8FF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />

    <GridLayout
        android:id="@+id/avatars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="6"
        android:alignmentMode="alignMargins"
        android:useDefaultMargins="true"
        android:gravity="center"
        android:layout_marginTop="-250dp"
        app:layout_constraintTop_toBottomOf="@id/off_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.5">


        <ImageButton
            android:id="@+id/a1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher" />

        <ImageButton
            android:id="@+id/a2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dove" />

        <ImageButton
            android:id="@+id/a3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dachshund_png_photo" />


        <TextView
            android:id="@+id/textViewForA1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="android girl" />

        <TextView
            android:id="@+id/textViewForA2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="flying flying" />

        <TextView
            android:id="@+id/textViewForA3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="short legs" />


        <ImageButton
            android:id="@+id/a4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/golden_retriever" />

        <ImageButton
            android:id="@+id/a5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/horse_head_png_image_hd" />

        <ImageButton
            android:id="@+id/a6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ichthyosaur_png_hd_image" />


        <TextView
            android:id="@+id/textViewForA4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="happy happy" />

        <TextView
            android:id="@+id/textViewForA5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="wap wap" />

        <TextView
            android:id="@+id/textViewForA6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="i'm not shark" />
    </GridLayout>

    <TextView
        android:id="@+id/show_tmi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="hello"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/avatars"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <TextView
        android:id="@+id/sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="YSM\n202221091226"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/show_tmi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/click_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Click Me"
        app:layout_constraintTop_toBottomOf="@id/sign"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
